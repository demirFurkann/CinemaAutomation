@model ListSaloonPageVM
@{
    ViewBag.Title = "ListSaloons";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="panel-heading">
    @Html.ActionLink("Salon Ekle", "AddSaloon", null, new { @class = "btn btn-primary" })
</header>

<div class="panel-body">
    <div class="adv-table">
        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
            <thead>
                <tr>
                    <th>Saloon ID</th>
                    <th class="hidden-phone">Saloon Number</th>
                    <th class="hidden-phone">Saloon Kapasite</th>
                    

                    <th class="hidden-phone">Sil</th>
                    <th class="hidden-phone">Güncelle</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.Saloons)
                {
                    <tr class="gradeX">




                        <td>@item.ID</td>
                        <td>@item.Capacity</td>
                        <td class="hidden-phone">@item.SaloonNumber</td>
                        
                        <td class="center hidden-phone"> @Html.ActionLink("Sil", "DeleteSaloon", new { id = item.ID }, new { @class = "btn btn-danger" })  </td>
                        <td class="center hidden-phone">@Html.ActionLink("Güncelle", "UpdateSaloon", new { id = item.ID }, new { @class = "btn btn-warning" })</td>

                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>
