
@model AddUpdateSaloonPageVM
@{
    ViewBag.Title = "AddSaloon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="page-header">
    <h2>Salon Ekle</h2>

    <div class="right-wrapper text-end">
        <ol class="breadcrumbs">
            <li>
                <a href="index.html">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>

            <li><span>Salonlar</span></li>

            <li><span>Salon Ekle</span></li>

        </ol>

    </div>
</header>

<!-- start: page -->
<div class="row">
    <div class="col">
        <section class="card">
            <header class="card-header">
                <div class="card-actions">
                    <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                    <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                </div>

                <h2 class="card-title">Salon Ekle</h2>
            </header>
            <div class="card-body">
                @using (Html.BeginForm("AddSaloon", "Saloon", FormMethod.Post, new { role = "form" }))
                {
                
                <form class="form-horizontal form-bordered" method="post" action="/Saloon/AddSaloon">
                    <div class="form-group row pb-4">
                        <label class="col-lg-3 control-label text-lg-end pt-2"
                               for="inputDefault">Salon Number</label>
                        <div class="col-lg-6">
                            <input type="text" class="form-control" id="SaloonNumber">
                        </div>
                    </div>
                    <div class="form-group row pb-4">
                        <label class="col-lg-3 control-label text-lg-end pt-2"
                               for="inputDefault">Salon Kapasitesi</label>
                        <div class="col-lg-6">
                            <input type="text" class="form-control" id="Capacity">
                        </div>
                    </div>
                    <div class="form-group row pb-4">
                        <div class="col-lg-3"></div>
                        <div class="col-lg-6">
                            <button type="button" class="mb-1 mt-1 me-1 btn btn-primary">Ekle</button>
                        </div>
                    </div>
                </form>
                }
            </div>
        </section>
    </div>
</div>
<!-- end: page -->
