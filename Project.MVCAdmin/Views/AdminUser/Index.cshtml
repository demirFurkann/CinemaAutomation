@model ListAdminUserPageVM
@{
    ViewBag.Title = "ListAdminUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="panel-heading">
    @Html.ActionLink("User Ekle", "AddAdminUser", null, new { @class = "btn btn-dark" })
</header>

<div class="panel-body">
    <div class="adv-table">
        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th class="hidden-phone">UserName</th>
                    <th class="hidden-phone">User Role</th>


                    <th class="hidden-phone">Sil</th>
                    <th class="hidden-phone">Güncelle</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.AdminUsers)
                {
                    <tr class="gradeX">




                        <td>@item.ID</td>
                        <td>@item.UserName</td>
                        
                        <td>@item.AdminRole</td>

                        <td class="center hidden-phone"> @Html.ActionLink("Sil", "DeleteAdminUser", new { id = item.ID }, new { @class = "btn btn-danger" })  </td>
                        <td class="center hidden-phone">@Html.ActionLink("Güncelle", "UpdateAdminUser", new { id = item.ID }, new { @class = "btn btn-warning" })</td>

                    </tr>
                 }

            </tbody>
        </table>

    </div>
</div>
