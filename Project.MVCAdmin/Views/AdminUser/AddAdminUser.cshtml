@model AddUpdateAdminUserPageVM
@{
    ViewBag.Title = "AddAdminUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<header class="page-header">
    <h2>Kullanıcı Ekle</h2>

    <div class="right-wrapper text-end">
    </div>
</header>

<div class="row">
    <div class="col">
        <section class="card">
            <header class="card-header">
                <div class="card-actions">
                    <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                    <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                </div>

                <h2 class="card-title">Kullanıcı Ekle</h2>
            </header>
            <div class="card-body">
                @using (Html.BeginForm("AddAdminUser", "AdminUser", FormMethod.Post, new { role = "form" }))
                {

                    <form class="form-horizontal form-bordered" method="post" action="/Saloon/AddSaloon">
                        <div class="form-group row pb-4">
                            <label class="col-lg-3 control-label text-lg-end pt-2"
                                   for="inputDefault">UserName</label>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(x => x.AdminUser.UserName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row pb-4">
                            <label class="col-lg-3 control-label text-lg-end pt-2"
                                   for="inputDefault">Password</label>
                            <div class="col-lg-6">
                                @Html.PasswordFor(x => x.AdminUser.Password, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row pb-4">
                            <label class="col-lg-3 control-label text-lg-end pt-2"
                                   for="inputDefault">Role</label>
                            <div class="col-lg-6">
                                @Html.EnumDropDownListFor(x => x.AdminUser.AdminRole, new { @class = "form-control-genislik" })

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2">İşlem:</label>
                            <div class="col-sm-10">
                                <button class="btn btn-primary">Ekle</button>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </section>
    </div>
</div>