@model AddUpdateFilmPageVM
@{
    ViewBag.Title = "AddFilm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>AddFilm</h2>
<style>
    .genislik {
        width: 300px;
    }
</style>

@using (Html.BeginForm("AddFilm", "Film", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="row">
        <div class="col-sm-12">

            <section class="pan@el">
                <header class="panel-heading">
                    Film Ekleme Sayfası
                </header>

                <div class="panel-body">


                    <div class="form-group">
                        <label class="col-sm-2">Film İsmi</label>
                        <div class="col-sm-10">



                            @Html.TextBoxFor(x => x.Film.MovieName, new { @class = "form-control-genislik" })
                        </div>
                    </div>


                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2">Film Süresi </label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Film.Duration, new { @class = "form-control-genislik" })
                        </div>
                    </div>
                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2">Film Tipi</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Film.Type, new { @class = "form-control-genislik" })
                        </div>
                    </div>

                    <br /> <br />
                    <div class="form-group">
                        <label class="col-sm-2">Film Bilgi</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Film.Info, new { @class = "form-control-genislik" })
                        </div>
                    </div>
                    <br /> <br />




                    <div class="form-group">
                        <label class="col-sm-2">Resim seciniz</label>
                        <div class="col-sm-10">

                            <input type="file" name="image" class="form-control genislik" />
                            <br />

                            @Html.TextBox("fileName", null, new { @class = "form-control-genislik", placeholder = "Resim ismi giriniz" })

                        </div>
                    </div>
                    <br /> <br />



                    <div class="form-group">
                        <label class="col-sm-2">İşlem:</label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">Ekle</button>
                        </div>
                    </div>


                </div>


            </section>

        </div>
    </div>
}