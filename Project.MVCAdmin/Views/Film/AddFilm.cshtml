@model AddUpdateFilmPageVM
@{
    ViewBag.Title = "AddFilm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="page-header">
    <h2>Film Ekle</h2>

    <div class="right-wrapper text-end">
        <ol class="breadcrumbs">
            <li>
                <a href="index.html">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>

            <li><span>Filmler</span></li>

            <li><span>Film Ekle</span></li>

        </ol>

    </div>
</header>

<!-- start: page -->
<div class="row">
    <div class="col">
        <section class="card">
            <header class="card-header">
                <div class="card-actions">
                    <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                    <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                </div>

                <h2 class="card-title">Film Ekle</h2>
            </header>
            <div class="card-body">
                @using (Html.BeginForm("AddFilm","Film",FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    <form class="form-horizontal form-bordered" method="post" action="/Film/AddFilm">


                        <div class="form-group row pb-4">
                            <label class="col-lg-3 control-label text-lg-end pt-2"
                                   for="inputDefault">Film Adı</label>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(x=> x.Film.MovieName, new {@class="form-control"})
                            </div>
                        </div>



                        <div class="form-group row pb-4">
                            <label class="col-lg-3 control-label text-lg-end pt-2"
                                   for="inputDefault">Film Süresi</label>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(x => x.Film.Duration, new { @class = "form-control" })

                            </div>
                        </div>

                        <div class="form-group row pb-4">
                            <label class="col-lg-3 control-label text-lg-end pt-2"
                                   for="inputDefault">Film Türü</label>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(x => x.Film.Type, new { @class = "form-control" })

                            </div>
                        </div>

                        <div class="form-group row pb-4">
                            <label class="col-lg-3 control-label text-lg-end pt-2"
                                   for="inputDefault">Film Bilgisi</label>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(x => x.Film.Info, new { @class = "form-control" })

                            </div>
                        </div>

                        <div class="form-group row pb-4">
                            <label class="col-lg-3 control-label text-lg-end pt-2"
                                   for="inputDefault">Resim</label>

                            <input type="file" name="image" class="form-control genislik" />
                            <br />

                            @Html.TextBox("fileName", null, new { @class = "form-control-genislik", placeholder = "Resim ismi giriniz" })
                        </div>


                        <div class="form-group row pb-4">
                            <div class="col-lg-3"></div>
                            <div class="col-lg-6">
                                <button type="submit" class="mb-1 mt-1 me-1 btn btn-primary">Ekle</button>
                            </div>
                        </div>

                    </form>
                }
            </div>
        </section>
    </div>
</div>


<!-- end: page -->
