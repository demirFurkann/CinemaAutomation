@model ListFilmPageVM
@{
    ViewBag.Title = "ListFilms";
}

<header class="page-header">
    <h2>Film Listesi</h2>

    <div class="right-wrapper text-end">
        <ol class="breadcrumbs">
            <li>
                <a href="index.html">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>

            <li><span>Film Yönetimi</span></li>

            <li><span>Film Listesi</span></li>

        </ol>

    </div>
</header>

<!-- start: page -->
<section class="card">
    <header class="card-header">

        <h2 class="card-title">Film Listesi</h2>
    </header>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-6">
                <div class="mb-3">
                    <a id="addToTable" href="/Film/AddFilm" class="btn btn-primary">Yeni Ekle <i class="fas fa-plus"></i></a>
                </div>
            </div>
        </div>
        <table class="table table-bordered table-striped mb-0" id="datatable-editable">
            <thead>
                <tr>
                    <
                    <th>Film Adı</th>
                    <th>Film Süresi</th>
                    <th>Tipi</th>
                    <th>Film Bilgisi</th>
                    <th>Fotoğraf</th>
                </tr>
            </thead>
            <tbody>
                @foreach (FilmVM item in Model.Films)
                {
                    <tr data-item-id="1">
                        <td>
                            @item.MovieName
                        </td>
                        <td>
                            @item.Duration
                        </td>
                        <td>
                            @item.Type
                        </td>
                        <td>
                            @item.Info
                        </td>
                        <td>
                            <img width="30" height="30" title="@item.MovieName" src="/Pictures/@item.ImagePath" />
                        </td>

                       
                        <td class="actions">
                            <a href="/Film/UpdateFilm/@item.ID" class="on-default edit-row"><i class="fas fa-pencil-alt"></i></a>
                            <a href="/Film/DeleteFilm/@item.ID" class="on-default remove-row"
                               onclick="return confirm('Bu filmi sildiğinizde bağlı olan tüm seansları da silinecketir! Bu filmi silmek istediğinize emini misinniz ? ')">
                                <i class="far fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
<!-- end: page -->
