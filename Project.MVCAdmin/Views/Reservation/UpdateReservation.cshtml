@model AddUpdateReservationPageVM

<h2>Rezervasyon Güncelle</h2>

@using (Html.BeginForm("UpdateReservation", "Reservation", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Reservation.ID) <!-- ID değeri gizli alan olarak eklenir -->

    <div>
        <label>Onay Kodu:</label>
        @Html.TextBoxFor(m => m.Reservation.ConfirmationCode)
    </div>

    <div>
        <label>Onay Durumu:</label>
        @Html.CheckBoxFor(m => m.Reservation.IsApproved)
    </div>

    <div>
        <label>Toplam Fiyat:</label>
        @Html.TextBoxFor(m => m.Reservation.TotalPrice)
    </div>

    <button type="submit">Rezervasyonu Güncelle</button>
}
