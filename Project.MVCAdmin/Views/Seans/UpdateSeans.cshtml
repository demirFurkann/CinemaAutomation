@model AddUpdateSeansPageVM
@{
    ViewBag.Title = "UpdateSeans";
}

<header class="page-header">
    <h2>Seans Ekle</h2>

    <div class="right-wrapper text-end">
        <ol class="breadcrumbs">
            <li>
                <a href="index.html">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>

            <li><span>Seanslar</span></li>

            <li><span>Seans Ekle</span></li>

        </ol>

    </div>
</header>

<!-- start: page -->
<div class="row">
    <div class="col">
        <section class="card">
            <header class="card-header">
                <div class="card-actions">
                    <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                    <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                </div>

                <h2 class="card-title">Seans Ekle</h2>
            </header>
            <div class="card-body">
                @using (Html.BeginForm("AddSeans", "Seans", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    <form class="form-horizontal form-bordered" method="post" action="/Seans/AddSeans">



                        <div class="form-group row pb-4">
                            <label class="col-lg-3 control-label text-lg-end pt-2"
                                   for="inputDefault">Salon Numarası</label>
                            <div class="col-lg-6">
                                @Html.DropDownListFor(x => x.Seans.SaloonID, new SelectList(Model.Saloons, "ID", "SaloonNumber"), "Lütfen seçiniz", new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row pb-4">
                            <label class="col-lg-3 control-label text-lg-end pt-2"
                                   for="inputDefault">Film Adı</label>
                            <div class="col-lg-6">
                                @Html.DropDownListFor(x => x.Seans.FilmID, new SelectList(Model.Films, "ID", "MovieName"), "Lütfen seçiniz", new { @class = "form-control" })
                            </div>
                        </div>



                        <div class="form-group row pb-4">
                            <label class="col-lg-3 control-label text-lg-end pt-2"
                                   for="inputDefault">Seans Numarası</label>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(x => x.Seans.SeansNumber, new { @class = "form-control" })
                            </div>
                        </div>



                        <div class="form-group row pb-4">
                            <label class="col-lg-3 control-label text-lg-end pt-2"
                                   for="inputDefault">Başlangiç Saati</label>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(x => x.Seans.StartTime, new { type = "datetime-local" })

                            </div>
                        </div>

                        <div class="form-group row pb-4">
                            <label class="col-lg-3 control-label text-lg-end pt-2"
                                   for="inputDefault">Bitiş Saati</label>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(x => x.Seans.Duration, new { @class = "form-control" })

                            </div>
                        </div>



                        <div class="form-group row pb-4">
                            <div class="col-lg-3"></div>
                            <div class="col-lg-6">
                                <button type="submit" class="mb-1 mt-1 me-1 btn btn-primary">Ekle</button>
                            </div>
                        </div>

                    </form>
                }
            </div>
        </section>
    </div>
</div>





