@model TicketListPageVM
@{
    ViewBag.Title = "Index";
}
<header class="page-header">
    <h2>Film Listesi</h2>

    <div class="right-wrapper text-end">
        <ol class="breadcrumbs">
            <li>
                <a href="index.html">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>

            <li><span>Bilet Yönetimi</span></li>

            <li><span>Bilet Listesi</span></li>

        </ol>

    </div>
</header>

<!-- start: page -->
<section class="card">
    <header class="card-header">

        <h2 class="card-title">Bilet Listesi</h2>
    </header>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-6">
                <div class="mb-3">
                    <a id="addToTable" href="/Ticket/AddTicket" class="btn btn-primary">Yeni Ekle <i class="fas fa-plus"></i></a>
                </div>
            </div>
        </div>
        <table class="table table-bordered table-striped mb-0" id="datatable-editable">
            <thead>
                <tr>
                    
                    <th>Film Adı</th>
                    <th>Film Süresi</th>
                 
                   
                </tr>
            </thead>
            <tbody>
                @foreach (TicketVM item in Model.Tickets)
                {
                    <tr data-item-id="1">
                        <td>
                            @item.TotalPrice
                        </td>
                       
                        <td>
                            @item.Type
                        </td>
                      

                        <td class="actions">
                            <a href="/Film/UpdateTicket/@item.ID" class="on-default edit-row"><i class="fas fa-pencil-alt"></i></a>
                            <a href="/Film/DeleteTicket/@item.ID" class="on-default remove-row"
                               onclick="return confirm('Bu filmi sildiğinizde bağlı olan tüm seansları da silinecketir! Bu filmi silmek istediğinize emini misinniz ? ')">
                                <i class="far fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
<!-- end: page -->
