@model AddUpdateSeatPageVM
@{
    ViewBag.Title = "UpdateSeat";
}

<header class="page-header">
    <h2>Koltuk Güncelle</h2>

    <div class="right-wrapper text-end">
        <ol class="breadcrumbs">
            <li>
                <a href="index.html">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>

            <li><span>Koltuklar</span></li>

            <li><span>Koltuk Güncelle</span></li>

        </ol>

    </div>
</header>

<!-- start: page -->
<div class="row">
    <div class="col">
        <section class="card">
            <header class="card-header">
                <div class="card-actions">
                    <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                    <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                </div>

                <h2 class="card-title">Koltuk Güncelle</h2>
            </header>
            <div class="card-body">
                @using (Html.BeginForm("UpdateSeat", "Seat", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(x=> x.Seat.ID)

                    <form class="form-horizontal form-bordered" method="post" action="/Seat/UpdateSeat">



                        <div class="form-group row pb-4">
                            <label class="col-lg-3 control-label text-lg-end pt-2"
                                   for="inputDefault">Salon Numarası</label>
                            <div class="col-lg-6">
                                @Html.DropDownListFor(x => x.Seat.SaloonID, new SelectList(Model.Saloons, "ID", "SaloonNumber"), "Lütfen seçiniz", new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row pb-4">
                            <label class="col-lg-3 control-label text-lg-end pt-2"
                                   for="inputDefault">Koltuk Harfi </label>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(x => x.Seat.Row, new { @class = "form-control" })
                            </div>
                        </div>



                        <div class="form-group row pb-4">
                            <label class="col-lg-3 control-label text-lg-end pt-2"
                                   for="inputDefault">Koltuk No</label>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(x => x.Seat.SeatNo, new { type = "form-control" })

                            </div>
                        </div>
