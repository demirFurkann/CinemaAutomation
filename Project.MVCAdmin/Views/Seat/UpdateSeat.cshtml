            <label class="col-lg-3 control-label text-lg-end pt-2"
                   for="inputDefault">Koltuk Durumu</label>
            <div class="col-lg-6">
                @Html.TextBoxFor(x => x.Seat.SeatStatus, new { type = "form-control" })

            </div>
        </div>*@

                        <div class="form-group row pb-4">
                            <div class="col-lg-3"></div>
                            <div class="col-lg-6">
                                <button type="submit" class="mb-1 mt-1 me-1 btn btn-primary">Ekle</button>
                            </div>
                        </div>

                    </form>
                }
            </div>
        </section>
    </div>
</div>

